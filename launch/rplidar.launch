<launch>
  <arg name="lidar_position" default="0.2 0 0 3.14159265359 0 0" />
  <arg name="base_link_frame" default="base_link" />
  <arg name="port" default="/dev/ttyUSB0" />
  <node name="rplidarNode"          pkg="rplidar_ros"  type="rplidarNode" output="screen">
    <param name="serial_port"         type="string" value="$(arg port)"/>  
    <param name="serial_baudrate"     type="int"    value="115200"/>
    <param name="frame_id"            type="string" value="laser"/>
    <param name="inverted"            type="bool"   value="false"/>
    <param name="angle_compensate"    type="bool"   value="true"/>
    <param name="pwm"                 type="int"    value="500"/>
    <param name="mode"                type="int"    value="1"/>
  </node>
  <node name="static_transform_publisher_lidar_baselink" pkg="tf2_ros" type="static_transform_publisher" output="screen" respawn="true" args="$(arg lidar_position) laser $(arg base_link_frame)" />
</launch>
